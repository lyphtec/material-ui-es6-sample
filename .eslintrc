// see http://eslint.org/docs/user-guide/configuring
{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "ecmaFeature": {
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "strict": 0,
        "eqeqeq": [2, "smart"],
        "quotes": [1, "single", "avoid-escape"],
        "no-underscore-dangle": 0,
        "wrap-iife": [2, "any"],
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "constructor-super": 2,
        "generator-star-spacing": [2, "after"],
        "no-this-before-super": 1,
        "prefer-const": 1
    }
}
